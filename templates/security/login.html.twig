{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="container container_sm">
  <form method="post">
    {% if error %}
        <div class="alert bg-pink">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
      <h1>Please sign in</h1>
    </div>

    <div>
      <label for="inputEmail">Email</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required 
             autofocus
      >
    </div>
    <div>
      <label for="inputPassword">Password</label>
      <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
      Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
      See https://symfony.com/doc/current/security/remember_me.html

      <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
      </div>
    #}

    <button type="submit">Sign in</button>
  </form>
</main>
{% endblock %}
