{% extends 'base.html.twig' %}

{% block title %}
  Log in!
{% endblock %}

{% block body %}
  <main class="container container_sm">
    <form method="post">
      <div>
        <h1>
          Please sign in
        </h1>
      </div>

      {% if error %}
        <div class="alert bg-pink">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <div>
        <label for="inputEmail">Email</label>
        <input type="email"
          value="{{ last_username }}"
          name="email"
          id="inputEmail"
          autocomplete="email"
          required
          autofocus />
      </div>
      <div>
        <label for="inputPassword">Password</label>
        <input type="password"
          name="password"
          id="inputPassword"
          autocomplete="current-password"
          required />
      </div>

      <div class="row">
        <label for="rememberMe">Remember me</label>
        <input id="rememberMe"
          type="checkbox"
          name="_remember_me"
          {{ remember_me ? 'checked' }} />
      </div>

      <input type="hidden"
        name="_csrf_token"
        value="{{ csrf_token('authenticate') }}" />

      <button type="submit">Sign in</button>
    </form>
  </main>
{% endblock %}
