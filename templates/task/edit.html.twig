{% extends 'base.html.twig' %}

{% block title %}
  Edit task
{% endblock %}

{% block content %}
  <div class="row mb">
    <a href="{{
      path(
        'task_view',
        {
          id: task.id
        }
      )
      }}"
      class="btn">
      View
    </a>
    <form method="POST"
      action="{{
      path(
        'task_delete',
        {
          id: task.id
        }
      )
      }}">
      <input type="hidden" name="_token" value="{{ csrf_token('task') }}" />
      <button type="submit" class="pink">Delete</button>
    </form>
  </div>

  {{ form_start(form) }}
  {{ form_widget(form) }}
  <div class="mb">
    <button type="submit" name="apply" title="Redirects to task view page">
      Apply
    </button>
    <button type="submit" name="save" title="Redirects to task list">
      Save
    </button>
  </div>
  {{ form_end(form) }}
{% endblock %}
