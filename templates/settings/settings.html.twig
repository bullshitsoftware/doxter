{% extends 'base.html.twig' %}

{% block title %}
  Settings
{% endblock %}

{% block content %}
  <main class="container container_lg">
    <h1>
      Settings
    </h1>
    {{ form_start(settings_form) }}
    {{ form_widget(settings_form) }}
    <button type="submit">Save</button>
    {{ form_end(settings_form) }}

    <h1>
      Change password
    </h1>
    {{ form_start(password_form) }}
    {{ form_widget(password_form) }}
    <button type="submit">Update password</button>
    {{ form_end(password_form) }}

    <h1>
      Import from TaskWarrior
    </h1>
    {{ form_start(import_form) }}
    {{ form_widget(import_form) }}
    <button type="submit">Import</button>
    {{ form_end(import_form) }}
  </main>
{% endblock %}
